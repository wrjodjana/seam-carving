    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug exec gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/exec",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set args ${input:gdb-debugger-args}"
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "debug tests gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "set args ${input:gdb-debugger-args}"
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "gdb-debugger-args",
            "description": "Enter your command line arguments",
            "default": ""
        }
    ]
}